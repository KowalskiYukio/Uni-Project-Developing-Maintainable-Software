<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="560.0" prefWidth="870.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.SceneController">
   <ImageView fitHeight="560.0" fitWidth="870.0" pickOnBounds="true" preserveRatio="true">
      <Image url="@../fail-screen.png"/>
   </ImageView>
   <Button layoutX="335.0" layoutY="329.0" mnemonicParsing="false" onAction="#startGame" prefWidth="200.0"
           text="RESTART" textFill="#ce1313">
      <font>
         <Font name="GGfont_STRIVE" size="24.0"/>
      </font>
   </Button>
   <Button layoutX="335.0" layoutY="387.0" mnemonicParsing="false" onAction="#switchToMainMenu" prefWidth="200.0"
           text="MAIN MENU" textFill="#ce1313">
      <font>
         <Font name="GGfont_STRIVE" size="24.0"/>
      </font>
   </Button>
   <ImageView layoutX="168.0" layoutY="157.0" pickOnBounds="true" preserveRatio="true">
      <Image url="@../game-over.png"/>
   </ImageView>
</AnchorPane>
